---
interface Props {
  text: string;
  value: string;
  filter: string;
}

const { text, value, filter } = Astro.props;
---

<button
  class={`filter-btn w-full h-full rounded-lg  text-text-secondary hover:text-white hover:bg-slate-900 transition-all duration-200 text-xs font-medium cursor-pointer block border-status-unknown/20 hover:border-status-unknown/40 relative z-10`}
  data-filter={filter}
  data-value={value}
>
  {text}
</button>

<style>
  .filter-btn.active {
    color: var(--color-text-dark);
    font-weight: 600;

    &:hover {
      background-color: transparent;
    }
  }
</style>
